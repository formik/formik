{
  "name": "formik-project",
  "private": true,
  "devDependencies": {
    "@changesets/changelog-github": "^0.2.7",
    "@changesets/cli": "^2.10.3",
    "@types/jest": "^26.0.14",
    "cypress": "^5.2.0",
    "got": "10.0.4",
    "husky": "^4.3.0",
    "lerna": "^3.19.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "release": "6.0.1",
    "@johnrom/tsdx": "0.14.2-noclean3",
    "typescript": "^4.0.3"
  },
  "workspaces": [
    "packages/*",
    "./app",
    "./app-native"
  ],
  "scripts": {
    "lerna": "lerna",
    "dev": "lerna run start --stream --parallel",
    "test": "lerna run test -- --silent",
    "test:watch": "lerna run test --stream --no-sort -- --watch",
    "test:watchAll": "lerna run test --stream --no-sort -- --watchAll",
    "test:vscode": "lerna run test --stream --no-sort --",
    "build": "lerna run build",
    "prepublish": "lerna run prepublish",
    "format": "prettier --write 'examples/**/*' 'packages/*/src/**/*' 'website/src/**/*.{ts,tsx,js,jsx,md,mdx}' 'app/pages/**/*'  'packages/*/test/**/*' 'README.md'",
    "changeset": "changeset",
    "release": "changeset publish",
    "git-reset": "git reset --hard HEAD",
    "git-clean": "git clean -d -x -e node_modules -e packages -f",
    "cypress": "cypress run",
    "precommit": "lint-staged",
    "cypress:open": "cypress open",
    "start:app": "yarn --cwd ./app run dev",
    "start:native": "yarn --cwd ./app-native run start",
    "postinstall": "cd ./app-native && expo-yarn-workspaces postinstall"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md,mdx,js,jsx}": [
      "npm run format",
      "tsdx lint"
    ]
  }
}
