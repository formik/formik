{
  "extends": "./tsconfig.base.json",
  "include": ["packages", "types", "scripts"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "formik": ["./packages/formik/src"],
      "formik-native": ["./packages/formik-native/src"],
      "@formik/core": ["./packages/@formik/core/src"],
      "@formik/reducer-refs": ["./packages/@formik/reducer-refs/src"],
      "$test/*": ["test/*"]
    }
  }
}
